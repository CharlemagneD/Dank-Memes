<p id="notice"><%= notice %></p>

<h1>Listing Memes</h1>

<table class="highlight">
  <thead>
    <tr>
      <th>User</th>
      <th>Meme type</th>
      <th>Top text</th>
      <th>Bottom text</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memes.each do |meme| %>
      <tr>
        <td><%= meme.dank_user.email %></td>
        <td><%= meme.meme_type %></td>
        <td><%= meme.top_text %></td>
        <td><%= meme.bottom_text %></td>
        <td><%= meme.rating %></td>
        <% if current_dank_user.id == meme.dank_user_id %>
        <td><%= link_to 'Show', meme %></td>
        <td><%= link_to 'Edit', edit_meme_path(meme) %></td>
        <td><%= link_to 'Destroy', meme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

